---
import { getLangFromUrl } from './../utils/i18n/i18n';

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>title</title>
	</head>
	<body>
        <slot />
	</body>
</html>
<style is:global lang="scss">
html, body, p, ul, ol, h1, h2, h3, h4 {
    padding: 0;
}

*,
::after,
::before {
	margin: 0;
    box-sizing: border-box;
}

body,
html {
    width: 100%;
    height: 100%;
	overflow-x: hidden;
}

body {
    min-height: 100dvh;
}

img,
video {
    display: block;
}

fieldset {
    border: none;
}

a {
    text-decoration: none;
	cursor: pointer;
    color: inherit;
}

a:focus,
a:active {
    outline: transparent;
}

ol[class],
ul[class],
li[class] {
    list-style: none;
}

button {
    outline: transparent;
    border: none;
    background-color: transparent;
    cursor: pointer;
}

button::-moz-focus-inner {
	padding: 0;
    border: 0;
}

input,
button,
textarea {
    font: inherit;
}

input[type="number"] {
  -moz-appearance: textfield;
}

input[type="number"]::-webkit-inner-spin-button {
    display: none;
}

body {
    background-color: #1f2029;
    color: white;
    font-family: "GoogleSansMedium", "Google Sans", Roboto, Arial, sans-serif;
}
</style>

