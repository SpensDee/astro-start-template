---
import Logo from './Logo.astro';
import Navigator from './Navigation.astro';
import { LanguageSelector } from 'astro-i18next/components';
---

<header>
    <Logo/>
    <Navigator/>
    <LanguageSelector
        languageMapping={
            { 
                en: "EN",
                uk: 'UA',
                ru: 'ru'
            }
        }
        />
</header>

<style lang="scss">
    header  {
        display: flex;
        align-items: center;
        justify-content: space-between; 
        max-width: 1440px;
        margin-inline: auto;
        padding: 20px;
    }
</style>